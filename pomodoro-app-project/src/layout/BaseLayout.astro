---
interface Props {
  title: string;
  className?: string;
  urlActive?: string;
  showFooter?: boolean;
  isStartSlideShow?: boolean;
}

import { ClientRouter } from "astro:transitions";
import { base } from "../utils/base.js";

import "../styles/global.css";

let {
  title,
  className = "",
  showFooter = true,
  isStartSlideShow = true,
} = Astro.props;

title = `Frontend Mentor | Pomodoro App`;
className += " flex flex-col";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href={`${base}/assets/favicon-32x32.png`}
    />

    <meta name="author" content="Barrie Freyre" />

    <base href={base} />

    <meta name="linkedin" content="https://www.linkedin.com/in/barriefreyre/" />
    <meta name="github" content="https://github.com/barriedirk" />
    <meta
      name="frontendmentor"
      content="https://www.frontendmentor.io/profile/barriedirk"
    />

    <link rel="me" href="https://www.linkedin.com/in/barriefreyre/" />
    <link rel="me" href="https://github.com/barriedirk" />
    <link rel="me" href="https://www.frontendmentor.io/profile/barriedirk" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Barrie Freyre",
        "url": "",
        "sameAs": [
          "https://www.linkedin.com/in/barriefreyre/",
          "https://github.com/barriedirk",
          "https://www.frontendmentor.io/profile/barriedirk"
        ]
      }
    </script>

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@100..900&family=Roboto+Slab:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <ClientRouter />
  </head>
  <body class={className}>
    <main>
      <slot />
    </main>

    <dialog id="modal-dialog" class="modal-dialog hide-scrollbar"></dialog>
  </body>
</html>

<script>
  const initializePage = () => {
    window.addEventListener("load", () => {
      document.body.classList.add("fade-in");
    });
  };

  initializePage();

  document.addEventListener("astro:after-swap", () => {
    setTimeout(() => {
      document.querySelector("body")!.classList.add("fade-in");
    }, 300);
  });
</script>
